<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plan"
            android:prompt="@string/plsSelect"
            style="@style/spinnerStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/planDay"
            android:prompt="@string/plsSelect"
            style="@style/spinnerStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/labelStyle"
            android:id="@+id/planName"
            android:textStyle="bold"/>
        <TextView
            style="@style/labelStyle"
            android:id="@+id/planDescription"/>
        <TextView
            style="@style/labelStyle"
            android:id="@+id/planDayName"
            android:textStyle="bold"/>
        <TextView
            style="@style/labelStyle"
            android:id="@+id/planDayDescription"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTrain"
            android:text="@string/startTrain"
            style="@style/buttonStyle"/>
    </LinearLayout>
</LinearLayout>
