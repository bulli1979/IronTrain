<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irontrain">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <meta-data
        android:name="com.google.maps.v2.API_KEY"
        android:value="gkey" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditPlanActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlanListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EditPlanDayActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StatsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".EditPlanDayExerciceActivity" />
        <activity android:name=".TrainActivity" />
        <activity
            android:name=".DoTrainActivity"
            android:label="@string/title_activity_do_train"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>